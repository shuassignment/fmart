<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/custLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!--<TextView-->
                <!--android:id="@+id/tvWelcome"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:padding="@dimen/_10sdp"-->
                <!--android:text="WELCOME TO MY FRESH MART"-->
                <!--android:textAlignment="center"-->
                <!--android:textColor="@color/colorPrimary"-->
                <!--android:textSize="@dimen/_20sdp"-->
                <!--android:textStyle="bold" />-->




            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                app:cardCornerRadius="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="20dp"
                    android:text="FRUITS"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />


                <ImageView

                    android:id="@+id/ivBannerFruits"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:onClick="fruitsBanner" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                app:cardCornerRadius="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="20dp"
                    android:text="VEGETABLES"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />


                <ImageView

                    android:id="@+id/ivBannerVegetables"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:onClick="VegetablesBanner" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                app:cardCornerRadius="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="20dp"
                    android:text="DRY FRUITS"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <ImageView

                    android:id="@+id/ivBannerDryFruits"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:onClick="dryFruitsBanner" />
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Offers"
                    android:gravity="center"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:padding="@dimen/_4sdp"
                    />


                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvOffer1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sdp"
                    android:text="Offer 1"
                    android:textColor="@color/colorDarkBlack"
                    android:layout_margin="@dimen/_4sdp"
                    android:padding="@dimen/_4sdp"/>


                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvOffer2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    android:text="Offer 2"
                    android:textColor="@color/colorDarkBlack"
                    android:layout_margin="@dimen/_4sdp"
                    android:padding="@dimen/_4sdp"/>


                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvOffer3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    android:text="Offer 3"
                    android:textColor="@color/colorDarkBlack"
                    android:padding="@dimen/_4sdp"
                    android:layout_margin="@dimen/_4sdp"/>
            </LinearLayout>

            <android.support.v7.widget.CardView xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                ads:cardCornerRadius="10dp"
                ads:cardElevation="10dp"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="20dp"
                    android:text="FRUITS"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <android.support.v7.widget.RecyclerView

                    android:id="@+id/rvSuperBazar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                </android.support.v7.widget.RecyclerView>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                ads:cardCornerRadius="10dp"
                ads:cardElevation="10dp"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="20dp"
                    android:text="VEGETABLES"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <android.support.v7.widget.RecyclerView

                    android:id="@+id/rvPatanjaliStore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                </android.support.v7.widget.RecyclerView>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                ads:cardCornerRadius="10dp"
                ads:cardElevation="10dp"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="20dp"
                    android:text="DRY FRUITS"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <android.support.v7.widget.RecyclerView

                    android:id="@+id/rvFruitsVegetables"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                </android.support.v7.widget.RecyclerView>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>